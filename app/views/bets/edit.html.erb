<section id="hero">

 <div class="row">

   <div class="twelve columns">

     <div class="hero-text">
       <h1 class="responsive-headline"><%= @game.e1 %> VS <%= @game.e2 %></h1>
       <h2 class="responsive-headline"><%= @isPlayed %></h2>       
     </div>
     </br>

   </div>

 </div>
</section>
<section id="styles">
  <div class="row games">
    <div class="row">
      <div class="gameFlags">
        <% if @game.e1!="TBC" %>
         <%=  image_tag "flags/"+@game.e1 %>
        <% else %>
          <i class="fa fa-question fa-5x"></i>
        <% end %>
      </div>
      <div class="gameTitle">
      <h2><%= @game.e1 %> VS <%= @game.e2 %></h2>
      <p>
        <%= @game.description %></br>
        <i class="fa fa-clock-o"></i>   - <%= @game.start %></br>
        <i class="fa fa-map-marker"></i>   <%= @game.location %>
      </p>
      </div>
      <div class="gameFlags">
      <% if @game.e2!="TBC" %>
        <%= image_tag "flags/"+@game.e2 %>
      <% else %>
        <i class="fa fa-question fa-5x"></i>
      <% end %>
      </div>
    </div>
    <hr>
  </div>
  <div class="row gameBet">
  	<h2>Editing Bet</h2>
  	<% if @access == true %>
  		<%= render partial: 'bets/form' %>
  	<% else %>
  		<%= render file: "./public/404" %>
  	<% end %>
  	<%= link_to 'Back', :back, :class => 'button'%>
  </div>
</section>