<p id="notice"><%= notice %></p>

<h1>Listing Bets</h1>

<table>
  <thead>
    <tr>
      <th>Id game</th>
      <th>Id user</th>
      <th>S1</th>
      <th>S2</th>
      <th>Points</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.id_game %></td>
        <td><%= bet.id_user %></td>
        <td><%= bet.s1 %></td>
        <td><%= bet.s2 %></td>
        <td><%= bet.points %></td>
        <td><%= bet.done %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bet', new_bet_path %>
