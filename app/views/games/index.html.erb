<section id="hero">
  <div class="gameHead">

   <div class="row">

     <div class="twelve columns">

       <div class="hero-text">
         <h1 class="responsive-headline">Games</h1>
       </div>
       </br>

     </div>

   </div>
  </div>

</section>
<section id="styles">
  <% @games.each do |game| %>
  <div class="row games">
    <div class="gameFlags">
      <% if game.e1!="TBC" %>
       <%=  image_tag "flags/"+game.e1 %>
      <% else %>
        <i class="fa fa-question fa-5x"></i>
      <% end %>
    </div>
    <div class="gameTitle">
      <a href="./games/<%= game.id %>">
        <h2><%= game.e1 %> VS <%= game.e2 %></h2>
      </a>
      <p>
        <%= game.description %></br>
        Start time : <%= game.start %></br>
        <%= game.location %>
      </p>
    </div>
    <div class="gameFlags">
      <% if game.e2!="TBC" %>
        <%= image_tag "flags/"+game.e2 %>
      <% else %>
        <i class="fa fa-question fa-5x"></i>
      <% end %>
      </div>  
    <hr>
  </div>

  <% end %>
  <%= will_paginate @games, :class => 'pagination' %>
</section>